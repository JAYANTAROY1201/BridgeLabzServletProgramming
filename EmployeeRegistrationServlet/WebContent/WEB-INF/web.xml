<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>SignUp</display-name>
  <welcome-file-list>
    <welcome-file>/HomePage.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>prelogin</servlet-name>
    <servlet-class>com.capgemini.controller.PreLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>prelogin</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>presignup</servlet-name>
    <servlet-class>com.capgemini.controller.PreSignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>presignup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signup</servlet-name>
    <servlet-class>com.capgemini.controller.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>/signupprocess</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>postlogin</servlet-name>
    <servlet-class>com.capgemini.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>postlogin</servlet-name>
    <url-pattern>/loginprocess</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>loginsuccess</servlet-name>
    <servlet-class>com.capgemini.controller.LoginSuccessfull</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginsuccess</servlet-name>
    <url-pattern>/login-successfull</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signupsuccess</servlet-name>
    <servlet-class>com.capgemini.controller.SignUpSuccessServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signupsuccess</servlet-name>
    <url-pattern>/signup-successfull</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>unsuccess</servlet-name>
    <servlet-class>com.capgemini.controller.ReLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>unsuccess</servlet-name>
    <url-pattern>/relogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signupunsuccess</servlet-name>
    <servlet-class>com.capgemini.controller.ResignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signupunsuccess</servlet-name>
    <url-pattern>/resignup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.capgemini.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
</web-app>